{
  "name": "d365-import-app",
  "version": "1.0.0",
  "description": "D365 Import Configuration Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win portable --config.directories.output=build-output",
    "build:dir": "electron-builder --win --dir --config.directories.output=build-output",
    "build:packager": "electron-packager . \"D365 Import App\" --platform=win32 --arch=x64 --out=build-output --overwrite --asar",
    "package": "npm run build:packager && powershell -Command \"Compress-Archive -Path 'build-output/D365 Import App-win32-x64' -DestinationPath 'build-output/D365-Import-App-Portable.zip' -Force\"",
    "clean": "rmdir /s /q release dist build-output 2>nul || echo Cleaned",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "d365",
    "configuration",
    "tool"
  ],
  "author": "Kemco Systems",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.kemcosystems.d365importapp",
    "productName": "D365 Import App",
    "directories": {
      "output": "build-output",
      "buildResources": "build"
    },
    "beforeBuild": null,
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "sign": null,
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "truncate-utf8-bytes": "^1.0.2"
  }
}